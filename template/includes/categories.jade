ul.unstyled
  -var categories = Object.keys(site.categories);
  - categories.sort();
  for category in categories
    - var label = config.categories.labels[category] ? config.categories.labels[category] : category;
    li
      a(href="#{config.url}/#{category}/")
        i.icon-tag
        |#{label}(#{site.categories[category].length})
